<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login_bg"
    tools:context=".view.viewholder.Signup_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textSize="36sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue_purple"
        android:fontFamily="@font/nunito_sans_bold"/>

    <ImageView
        android:id="@id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/splash_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/et_signupUsername"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="@drawable/input_bg"
                android:padding="8dp"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_sans_regular"
                android:hint="@string/username"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/et_FullName"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:background="@drawable/input_bg"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:padding="8dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:hint="@string/fullName"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:id="@+id/et_signupEmail"
                android:background="@drawable/input_bg"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_sans_regular"
                android:textColor="@color/black"
                android:hint="@string/email" />

            <EditText
                android:id="@+id/et_signupPassword"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:background="@drawable/input_bg"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:textColor="@color/black"
                android:hint="@string/password" />

            <Button
                android:id="@+id/btn_Signup"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:text="@string/signup"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_sans_bold"
                android:layout_marginTop="27dp"
                android:backgroundTint="@color/blue_purple"
                app:cornerRadius = "20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginRedirectText"
                android:text="@string/login_redirect"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_sans_regular"
                android:layout_marginTop="8dp"
                android:textColor="@color/blue_purple"/>
        </LinearLayout>
</LinearLayout>